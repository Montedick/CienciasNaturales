<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.montelongo.cienciasnaturales.infPersona">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TxtTipoSexual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/TxtTextoSexual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imagentipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/aparatoreproductormasculino" />

            <Button
                android:id="@+id/BtnRegresarMenu"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:background="@mipmap/refrescar"
                android:layout_height="100dp"
                android:text="Regresar" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
